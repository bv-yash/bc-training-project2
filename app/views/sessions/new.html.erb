<% flash.each do |type, msg| %>
        <div class = <%= type %> >
        <%= msg %>
        <div>
<% end %>

<h1>Sign In</h1>
<%= form_with url: '/login', method: :post do |form| %>

        <div>
                <%= form.email_field :email, placeholder: 'Enter your email' %>
        </div>
        <br>
        
        <div>
                <%= form.password_field :password, placeholder: 'Enter your password' %>
        </div>
        <br>

        <div>
                <%= form.submit "Login"%> | <button><%= link_to "Home", root_path %></button>
        </div>
<% end %>
<br>
<div> 
        <strong> New user ! </strong> 
        <a href = 'signup'> Sign up here</a> 
</div>